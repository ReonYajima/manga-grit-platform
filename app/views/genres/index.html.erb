  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ===== Chart.js - ÂÜÜ„Ç∞„É©„ÉïÊèèÁîª ===== -->
  <script>
    const ctx = document.getElementById('genreChart');
    
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: <%= raw @genre_stats.map(&:name).to_json %>,
        datasets: [{
          label: 'ÊäïÁ®øÊï∞',
          data: <%= raw @genre_stats.map { |g| g.posts_count || 0 }.to_json %>,
          backgroundColor: [
            'rgba(102, 126, 234, 0.8)',
            'rgba(118, 75, 162, 0.8)',
            'rgba(237, 100, 166, 0.8)',
            'rgba(255, 154, 158, 0.8)',
            'rgba(75, 192, 192, 0.8)',
            'rgba(255, 206, 86, 0.8)'
          ],
          borderColor: [
            'rgba(102, 126, 234, 1)',
            'rgba(118, 75, 162, 1)',
            'rgba(237, 100, 166, 1)',
            'rgba(255, 154, 158, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              padding: 15,
              font: {
                size: 12
              }
            }
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                let label = context.label || '';
                if (label) {
                  label += ': ';
                }
                label += context.parsed + '‰ª∂';
                return label;
              }
            }
          }
        }
      }
    });
  </script>

