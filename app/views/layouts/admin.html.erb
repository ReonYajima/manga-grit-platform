<!DOCTYPE html>
<html>
<head>
  <title>管理画面 - マンガグリットプラットフォーム</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }
    .admin-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }
    .admin-card {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
      padding: 2rem;
      margin-bottom: 2rem;
    }
    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 1rem;
      padding: 1.5rem;
      text-align: center;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
      transition: transform 0.2s;
    }
    .stat-card:hover {
      transform: translateY(-5px);
    }
    .stat-card h3 {
      font-size: 2.5rem;
      font-weight: bold;
      margin: 0;
    }
    .stat-card p {
      margin: 0;
      font-size: 1rem;
    }
  </style>
</head>

<body>
  <!-- ナビゲーションバー -->
  <% if session[:admin_authenticated] %>
    <nav class="navbar navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          <i class="bi bi-shield-lock-fill me-2"></i>
          管理画面
        </span>
        <div class="d-flex">
          <%= link_to admin_dashboard_path, class: "btn btn-outline-light me-2" do %>
            <i class="bi bi-speedometer2"></i> ダッシュボード
          <% end %>
          <%= link_to admin_exports_path, class: "btn btn-outline-light me-2" do %>
            <i class="bi bi-file-earmark-spreadsheet"></i> CSV出力
          <% end %>
          <%= button_to admin_logout_path, method: :delete, class: "btn btn-outline-danger" do %>
            <i class="bi bi-box-arrow-right"></i> ログアウト
          <% end %>
        </div>
      </div>
    </nav>
  <% end %>

  <div class="admin-container">
    <!-- フラッシュメッセージ -->
    <% if notice.present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
    
    <% if alert.present? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>

    <%= yield %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>